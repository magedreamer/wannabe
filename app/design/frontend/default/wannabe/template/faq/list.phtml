/* @var $this Flagbit_Faq_Block_Frontend_List */
?>
<div class="page-title faq-title">
    <h1><?php echo $this->__('Các câu hỏi thường gặp'); ?></h1>
</div>

<div class="faq-main clearfix">
    <?php if ($this->hasFaq()): ?>

        <div class="faq-content">

            <?php if ($this->getCategoryCollection()) : ?>
                <dl class="faq-list">
                    <?php foreach ($this->getCategoryCollection() as $category) : ?>
                        <dt id="faq-category-<?php echo $this->htmlEscape($category->getId()); ?>" class="faq-question-cate" ><?php echo $this->htmlEscape($category->getName()); ?></dt>
                        <dd>
                            <ul class="faq-list-question">
                                <?php $itemCollection = $this->getItemCollectionByCategory($category); ?>
                                <?php foreach ($itemCollection as $item) : ?>
                                    <li>
                                        <a href="#faq-item-<?php echo $item->getId() ?>">
                                            <?php echo $this->htmlEscape($item->getQuestion()); ?>
                                        </a>
                                    </li>
                                <?php endforeach; ?>
                            </ul>
                            
                            <ul class="faq-list-answer">
                                <?php foreach ($itemCollection as $item) : ?>
                                    <li>
                                        <span id="faq-item-<?php echo $item->getId() ?>" class="faq-answer-name ">
                                            <?php echo $this->htmlEscape($item->getQuestion()); ?>
                                        </span>
                                         <a href="#top"><span class="faq-top">Về Đầu Trang</span></a>

                                        <div class="faq-answer-content">
                                            <?php echo $item->getAnswer(); ?>
                                        </div>
                                    </li>
                                <?php endforeach; ?>
                            </ul>
                            
                        </dd>

                    <?php endforeach; ?>
                </dl>
            <?php endif; ?>

        </div>



        <?php else: ?>
        <p class="faq-items"><?php echo $this->__('Thông tin đang được cập nhật') ?></p>
        
        
    <?php endif; ?>


</div>

